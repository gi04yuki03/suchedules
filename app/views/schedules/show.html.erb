 <%= render "shared/header" %>

<div class = "main">
<h3>スケジュール詳細</h3></div>
 
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
 
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start.to_s(:datetime_jp) %></td>
  </tr>
 
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end.to_s(:datetime_jp) %></td>
  </tr>
 
  <tr>
    <th>終日</th>
    <td><%= @schedule.allday %></td>
  </tr>
     
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>
 
 <div>
   <ul>
     <li><%= link_to "スケジュール情報一覧に戻る", :schedules %></li>
   </ul>
 </div>
 
<%= render 'shared/footer' %>